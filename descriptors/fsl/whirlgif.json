{
  "tool-version": "6.0.5",
  "name": "whirlgif",
  "author": "Hans Dinsen-Hansen, Kevin Kadow, Mark Podlipec",
  "description": "GIF animation tool",
  "url": "http://members.aol.com/royalef/gifanim.htm",
  "command-line": "whirlgif [OUTFILE] [LOOP_COUNT] [DELAY_TIME] [DISP_FLAG] [LIST_FILE] [FILES]",
  "container-image": {
    "image": "mcin/fsl:6.0.5",
    "type": "docker"
  },
  "inputs": [
    {
      "command-line-flag": "-o",
      "description": "Specify the output file",
      "value-key": "[OUTFILE]",
      "type": "File",
      "optional": true,
      "id": "outfile",
      "name": "Output file"
    },
    {
      "command-line-flag": "-loop",
      "description": "Specify the loop count for the animation",
      "value-key": "[LOOP_COUNT]",
      "type": "Number",
      "optional": true,
      "id": "loop_count",
      "name": "Loop count",
      "integer": true
    },
    {
      "command-line-flag": "-time",
      "description": "Specify the delay time between frames",
      "value-key": "[DELAY_TIME]",
      "type": "Number",
      "optional": true,
      "id": "delay_time",
      "name": "Delay time",
      "integer": true
    },
    {
      "command-line-flag": "-disp",
      "description": "Specify the disposal method for frames",
      "value-key": "[DISP_FLAG]",
      "type": "String",
      "optional": true,
      "id": "disp_flag",
      "name": "Disposal method",
      "value-choices": ["none", "back", "prev", "not"]
    },
    {
      "command-line-flag": "-i",
      "description": "Input list file containing names of images to be used for animation",
      "value-key": "[LIST_FILE]",
      "type": "File",
      "optional": true,
      "id": "list_file",
      "name": "List file"
    },
    {
      "description": "Input image files for the animation",
      "value-key": "[FILES]",
      "type": "File",
      "list": true,
      "optional": false,
      "id": "input_files",
      "name": "Input files"
    }
  ],
  "schema-version": "0.5",
  "output-files": [
    {
      "path-template": "[OUTFILE]",
      "description": "The generated GIF animation",
      "optional": false,
      "id": "output_file",
      "name": "Output GIF"
    }
  ]
}
