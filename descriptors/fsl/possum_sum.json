{
  "tool-version": "6.0.5:9e026117",
  "name": "possum_sum",
  "author": "Ivana Drobnjak, University of Oxford",
  "description": "Sum of output signals from multiple possum processors",
  "command-line": "possum_sum [INPUT_SIGNAL] [OUTPUT_SIGNAL] [NUM_PROCESSORS] [VERBOSE_FLAG]",
  "container-image": {
    "image": "mcin/docker-fsl:latest",
    "index": "index.docker.io",
    "type": "docker"
  },
  "inputs": [
    {
      "command-line-flag": "-i",
      "description": "Input signal for one processor (possum output matrix)",
      "value-key": "[INPUT_SIGNAL]",
      "type": "File",
      "optional": false,
      "id": "input_signal",
      "name": "Input signal"
    },
    {
      "command-line-flag": "-o",
      "description": "Output signal: sum of all the processors (possum matrix form)",
      "value-key": "[OUTPUT_SIGNAL]",
      "type": "File",
      "optional": false,
      "id": "output_signal",
      "name": "Output signal"
    },
    {
      "command-line-flag": "-n",
      "description": "Number of processors",
      "value-key": "[NUM_PROCESSORS]",
      "type": "Number",
      "integer": true,
      "optional": true,
      "id": "num_processors",
      "name": "Number of processors"
    },
    {
      "command-line-flag": "-v",
      "description": "Switch on diagnostic messages",
      "value-key": "[VERBOSE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "verbose_flag",
      "name": "Verbose Flag"
    }
  ],
  "schema-version": "0.5",
  "output-files": [
    {
      "path-template": "[OUTPUT_SIGNAL]",
      "description": "Sum of all input signals from processors",
      "optional": false,
      "id": "output_file",
      "name": "Output file"
    }
  ]
}
