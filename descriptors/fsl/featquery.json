{
  "tool-version": "6.0.4",
  "name": "featquery",
  "author": "FMRIB Analysis Group, University of Oxford",
  "descriptor-url": "https://fsl.fmrib.ox.ac.uk/fsl/fslwiki/FEAT/UserGuide",
  "description": "Tool to extract statistics and/or time series from FEAT directories",
  "url": "https://fsl.fmrib.ox.ac.uk/fsl/fslwiki",
  "command-line": "featquery [N_FEATDIRS] [FEATDIRS] [N_STATS] [STATS] [OUTPUT_ROOTNAME] [ATLAS_FLAG] [PERCENT_CONVERT_FLAG] [THRESH_FLAG] [INTERP_THRESH] [TIMESERIES_FLAG] [WEIGHT_FLAG] [BROWSER_FLAG] [MASK] [COORDS]",
  "container-image": {
    "type": "docker",
    "image": "brainlife/fsl:6.0.4-patched2"
  },
  "inputs": [
    {
      "description": "Number of feat directories",
      "value-key": "[N_FEATDIRS]",
      "type": "Number",
      "optional": false,
      "id": "n_featdirs",
      "name": "Number of feat directories"
    },
    {
      "description": "List of feat directories",
      "value-key": "[FEATDIRS]",
      "type": "String",
      "list": true,
      "id": "featdirs",
      "name": "Feat directories"
    },
    {
      "description": "Number of stats to query",
      "value-key": "[N_STATS]",
      "type": "Number",
      "optional": false,
      "id": "n_stats",
      "name": "Number of statistics"
    },
    {
      "description": "List of stats",
      "value-key": "[STATS]",
      "type": "String",
      "list": true,
      "id": "stats",
      "name": "Statistics"
    },
    {
      "description": "Root name for output files",
      "value-key": "[OUTPUT_ROOTNAME]",
      "type": "String",
      "optional": false,
      "id": "output_rootname",
      "name": "Output root name"
    },
    {
      "command-line-flag": "-a",
      "description": "Use selected atlas to generate label (etc.) information",
      "value-key": "[ATLAS_FLAG]",
      "type": "String",
      "optional": true,
      "id": "atlas_flag",
      "name": "Atlas flag"
    },
    {
      "command-line-flag": "-p",
      "description": "Convert PE / COPE values into percentages",
      "value-key": "[PERCENT_CONVERT_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "percent_convert_flag",
      "name": "Percent convert flag"
    },
    {
      "command-line-flag": "-t",
      "description": "Threshold stats images",
      "value-key": "[THRESH_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "thresh_flag",
      "name": "Threshold flag"
    },
    {
      "command-line-flag": "-i",
      "description": "Affect size of resampled masks by changing post-interpolation thresholding (default 0.5)",
      "value-key": "[INTERP_THRESH]",
      "type": "Number",
      "optional": true,
      "id": "interp_thresh",
      "name": "Interpolation threshold",
      "default-value": 0.5
    },
    {
      "command-line-flag": "-s",
      "description": "Create time-series plots",
      "value-key": "[TIMESERIES_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "timeseries_flag",
      "name": "Time-series flag"
    },
    {
      "command-line-flag": "-w",
      "description": "Do not binarise mask (allow weighting)",
      "value-key": "[WEIGHT_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "weight_flag",
      "name": "Weight flag"
    },
    {
      "command-line-flag": "-b",
      "description": "Popup results in browser when finished",
      "value-key": "[BROWSER_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "browser_flag",
      "name": "Browser flag"
    },
    {
      "description": "Mask file used as a reference for coordinates; if relative, searched within each FEAT directory",
      "value-key": "[MASK]",
      "type": "File",
      "optional": false,
      "id": "mask_file",
      "name": "Mask file"
    },
    {
      "command-line-flag": "-vox",
      "description": "Coordinates specified in voxels (X Y Z)",
      "value-key": "[COORDS]",
      "type": "Number",
      "list": true,
      "id": "coords",
      "optional": true,
      "name": "Voxel coordinates"
    }
  ],
  "schema-version": "0.5",
  "groups": [
    {
      "description": "Optional parameters for FEAT query operations",
      "id": "optional_params_group",
      "members": [
        "atlas_flag",
        "percent_convert_flag",
        "thresh_flag",
        "interp_thresh",
        "timeseries_flag",
        "weight_flag",
        "browser_flag",
        "coords"
      ],
      "name": "Optional Parameters"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUT_ROOTNAME]_queryreport.txt",
      "description": "Generated query report file",
      "optional": false,
      "id": "query_report",
      "name": "Query report file"
    }
  ]
}
