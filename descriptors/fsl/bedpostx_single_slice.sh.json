{
  "tool-version": "1.0.0",
  "name": "zeropad",
  "description": "Add leading zeros to a number up to the specified length.",
  "command-line": "zeropad [INPUT_NUMBER] [OUTPUT_LENGTH]",
  "container-image": {
    "image": "local/zeropad:latest",
    "index": "index.docker.io",
    "type": "docker"
  },
  "inputs": [
    {
      "description": "Input number to pad",
      "value-key": "[INPUT_NUMBER]",
      "type": "String",
      "optional": false,
      "id": "input_number",
      "name": "Input number"
    },
    {
      "description": "Desired length of output with leading zeros",
      "value-key": "[OUTPUT_LENGTH]",
      "type": "Number",
      "optional": false,
      "id": "output_length",
      "name": "Output length"
    }
  ],
  "schema-version": "0.5"
}
