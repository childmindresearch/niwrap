{
  "tool-version": "6.0.5",
  "name": "spharm_rm",
  "author": "University of Oxford (Mark Jenkinson)",
  "description": "Part of FSL - Spherical harmonics removal tool to process neuroimaging data",
  "command-line": "spharm_rm [INPUT_FILE] [OUTPUT_FILE] [MASK_FILE] [NUMBER_OF_TERMS] [VERBOSE_FLAG]",
  "container-image": {
    "image": "mcin/fsl:6.0.5",
    "type": "docker"
  },
  "inputs": [
    {
      "description": "Input image filename",
      "value-key": "[INPUT_FILE]",
      "type": "File",
      "optional": false,
      "id": "input_file",
      "name": "Input File",
      "command-line-flag": "--in"
    },
    {
      "description": "Output image filename",
      "value-key": "[OUTPUT_FILE]",
      "type": "String",
      "optional": false,
      "id": "output_file",
      "name": "Output File",
      "command-line-flag": "--out"
    },
    {
      "description": "Mask filename",
      "value-key": "[MASK_FILE]",
      "type": "File",
      "optional": true,
      "id": "mask_file",
      "name": "Mask File",
      "command-line-flag": "-m"
    },
    {
      "description": "Number of terms to remove (order is 1,x,y,z,z^2+(x^2+y^2)/2,zx,zy,xy,x^2-y^2)",
      "value-key": "[NUMBER_OF_TERMS]",
      "type": "Number",
      "optional": true,
      "id": "number_of_terms",
      "name": "Number of Terms",
      "command-line-flag": "-n"
    },
    {
      "description": "Switch on diagnostic messages",
      "value-key": "[VERBOSE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "verbose_flag",
      "name": "Verbose Flag",
      "command-line-flag": "--verbose"
    }
  ],
  "schema-version": "0.5",
  "groups": [
    {
      "description": "Optional arguments for the tool",
      "id": "optional_args_group",
      "members": ["mask_file", "number_of_terms", "verbose_flag"],
      "name": "Optional Arguments"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUT_FILE]",
      "description": "Output image file generated by spharm_rm",
      "optional": false,
      "id": "outfile",
      "name": "Output Image File"
    }
  ]
}
