{
  "tool-version": "6.0.4",
  "name": "fsladd",
  "author": "FMRIB Analysis Group, University of Oxford",
  "description": "Tool for adding or averaging multiple input volumes.",
  "url": "https://fsl.fmrib.ox.ac.uk/fsl/fslwiki",
  "command-line": "fsladd [OUTPUT_FILE] [MEAN_FLAG] [SCALE_FLAG] [VOLUME_LIST]",
  "container-image": {
    "type": "docker",
    "image": "brainlife/fsl:6.0.4-patched2"
  },
  "inputs": [
    {
      "description": "Output volume file",
      "value-key": "[OUTPUT_FILE]",
      "type": "String",
      "optional": false,
      "id": "output_file",
      "name": "Output file"
    },
    {
      "command-line-flag": "-m",
      "description": "Calculate mean instead of sum",
      "value-key": "[MEAN_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "mean_flag",
      "name": "Mean flag"
    },
    {
      "command-line-flag": "-s",
      "description": "Scale each input image mean to 1000 before processing",
      "value-key": "[SCALE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "scale_flag",
      "name": "Scale flag"
    },
    {
      "description": "List of input volumes",
      "value-key": "[VOLUME_LIST]",
      "type": "File",
      "list": true,
      "optional": false,
      "id": "volume_list",
      "name": "Input volumes"
    }
  ],
  "schema-version": "0.5",
  "output-files": [
    {
      "path-template": "[OUTPUT_FILE]",
      "description": "Resulting output file",
      "optional": false,
      "id": "resulting_output",
      "name": "Output volume file"
    }
  ]
}