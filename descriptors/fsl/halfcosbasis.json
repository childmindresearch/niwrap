{
  "tool-version": "6.0.4",
  "name": "halfcosbasis",
  "author": "FMRIB Analysis Group, University of Oxford",
  "description": "Tool for handling half-cosine basis functions in FSL",
  "url": "https://fsl.fmrib.ox.ac.uk/fsl/fslwiki",
  "command-line": "halfcosbasis [HRF_PARAM_FILE_HF] [VERBOSE_FLAG] [DEBUG_LEVEL_DEBUGLEVEL] [TIMING_ON_FLAG] [LOG_DIR_LOGDIR] [NUM_HRF_SAMPLES] [NUM_HRF_BASIS_FUNCS] [NUM_SECS_NSECS] [TEMP_RES]",
  "container-image": {
    "type": "docker",
    "image": "brainlife/fsl:6.0.4-patched2"
  },
  "inputs": [
    {
      "description": "Half cosine HRF parameter ranges file",
      "value-key": "[HRF_PARAM_FILE]",
      "command-line-flag": "--hcprf",
      "type": "File",
      "optional": false,
      "id": "hrf_param_file",
      "name": "HRF Parameter File"
    },
    {
      "command-line-flag": "--hf",
      "description": "Half cosine HRF parameter ranges file",
      "value-key": "[HRF_PARAM_FILE_HF]",
      "type": "File",
      "optional": false,
      "id": "hrf_param_file_hf",
      "name": "HRF Parameter File (hf)"
    },
    {
      "command-line-flag": "-V",
      "description": "Switch on diagnostic messages",
      "value-key": "[VERBOSE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "verbose_flag",
      "name": "Verbose Flag"
    },
    {
      "command-line-flag": "--db",
      "description": "Set debug level",
      "value-key": "[DEBUG_LEVEL]",
      "type": "Number",
      "optional": true,
      "id": "debug_level",
      "name": "Debug Level"
    },
    {
      "command-line-flag": "--debug",
      "description": "Set debug level",
      "value-key": "[DEBUG_LEVEL_DEBUG]",
      "type": "Number",
      "optional": true,
      "id": "debug_level_debug",
      "name": "Debug Level (debug)"
    },
    {
      "command-line-flag": "--debuglevel",
      "description": "Set debug level",
      "value-key": "[DEBUG_LEVEL_DEBUGLEVEL]",
      "type": "Number",
      "optional": true,
      "id": "debug_level_debuglevel",
      "name": "Debug Level (debuglevel)"
    },
    {
      "command-line-flag": "--to",
      "description": "Turn timing on",
      "value-key": "[TIMING_ON_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "timing_on_flag",
      "name": "Timing On Flag"
    },
    {
      "command-line-flag": "-l",
      "description": "Log directory",
      "value-key": "[LOG_DIR]",
      "type": "String",
      "optional": true,
      "id": "log_dir",
      "name": "Log Directory"
    },
    {
      "command-line-flag": "--ld",
      "description": "Log directory",
      "value-key": "[LOG_DIR_LD]",
      "type": "String",
      "optional": true,
      "id": "log_dir_ld",
      "name": "Log Directory (ld)"
    },
    {
      "command-line-flag": "--logdir",
      "description": "Log directory",
      "value-key": "[LOG_DIR_LOGDIR]",
      "type": "String",
      "optional": true,
      "id": "log_dir_logdir",
      "name": "Log Directory (logdir)"
    },
    {
      "command-line-flag": "--nhs",
      "description": "Number of HRF samples to use (default is 1000)",
      "value-key": "[NUM_HRF_SAMPLES]",
      "type": "Number",
      "default-value": 1000,
      "optional": true,
      "id": "num_hrf_samples",
      "name": "Number of HRF Samples"
    },
    {
      "command-line-flag": "--nbfs",
      "description": "Number of HRF basis functions to use (default is 3)",
      "value-key": "[NUM_HRF_BASIS_FUNCS]",
      "type": "Number",
      "default-value": 3,
      "optional": true,
      "id": "num_hrf_basis_funcs",
      "name": "Number of HRF Basis Functions"
    },
    {
      "command-line-flag": "--ns",
      "description": "Number of seconds (default is 40)",
      "value-key": "[NUM_SECS]",
      "type": "Number",
      "default-value": 40,
      "optional": true,
      "id": "num_secs",
      "name": "Number of Seconds"
    },
    {
      "command-line-flag": "--nsecs",
      "description": "Number of seconds (default is 40)",
      "value-key": "[NUM_SECS_NSECS]",
      "type": "Number",
      "default-value": 40,
      "optional": true,
      "id": "num_secs_nsecs",
      "name": "Number of Seconds (nsecs)"
    },
    {
      "command-line-flag": "--res",
      "description": "Temporal resolution (default is 0.05)",
      "value-key": "[TEMP_RES]",
      "type": "Number",
      "default-value": 0.05,
      "optional": true,
      "id": "temp_res",
      "name": "Temporal Resolution"
    },
    {
      "command-line-flag": "-h",
      "description": "Display help message",
      "value-key": "[HELP_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "help_flag",
      "name": "Help Flag"
    },
    {
      "command-line-flag": "--help",
      "description": "Display help message",
      "value-key": "[HELP_FLAG_LONG]",
      "type": "Flag",
      "optional": true,
      "id": "help_flag_long",
      "name": "Help Flag (long)"
    }
  ],
  "schema-version": "0.5",
  "groups": [
    {
      "description": "Specify compulsory arguments for halfcosbasis",
      "id": "compulsory_group",
      "members": ["hrf_param_file", "hrf_param_file_hf"],
      "name": "Compulsory Arguments",
      "mutually-exclusive": true
    },
    {
      "description": "Specify optional arguments for halfcosbasis",
      "id": "optional_group",
      "members": [
        "verbose_flag",
        "debug_level",
        "debug_level_debug",
        "debug_level_debuglevel",
        "timing_on_flag",
        "log_dir",
        "log_dir_ld",
        "log_dir_logdir",
        "num_hrf_samples",
        "num_hrf_basis_funcs",
        "num_secs",
        "num_secs_nsecs",
        "temp_res",
        "help_flag",
        "help_flag_long"
      ],
      "name": "Optional Arguments"
    }
  ]
}
