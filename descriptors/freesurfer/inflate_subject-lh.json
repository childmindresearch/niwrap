{
  "tool-version": "7.4.1",
  "name": "inflate_subject-lh",
  "author": "FreeSurfer Developers",
  "description": "A tool to process and inflate left hemisphere subject data in FreeSurfer",
  "command-line": "inflate_subject[INPUT_FOLDER] [HOSTNAME_FLAG]",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "schema-version": "0.5",
  "inputs": [
    {
      "description": "Input folder containing subject data",
      "value-key": "[INPUT_FOLDER]",
      "type": "String",
      "optional": false,
      "id": "input_folder",
      "name": "Input Folder",
      "command-line-flag": "-lh"
    },
    {
      "command-line-flag": "hostname",
      "description": "Flag to check hostname",
      "value-key": "[HOSTNAME_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "hostname_flag",
      "name": "Hostname Flag"
    }
  ],
  "url": "https://github.com/freesurfer/freesurfer"
}
