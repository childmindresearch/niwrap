{
  "tool-version": "7.4.1",
  "name": "polyorder",
  "author": "FreeSurfer Developers",
  "descriptor-url": "https://example.com/polyorder_descriptor.json",
  "description": "Computes the order of polynomial regressors needed to achieve a highpass filter with the given cutoff frequency.",
  "command-line": "polyorder [NTP] [TR] [CUTOFF]",
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "--ntp",
      "description": "Number of time points (i.e., number of TRs).",
      "value-key": "[NTP]",
      "type": "Number",
      "optional": false,
      "id": "ntp",
      "name": "Number of Time Points"
    },
    {
      "command-line-flag": "--TR",
      "description": "TR in seconds.",
      "value-key": "[TR]",
      "type": "Number",
      "optional": false,
      "id": "tr",
      "name": "TR (seconds)"
    },
    {
      "command-line-flag": "--cutoff",
      "description": "Cutoff frequency in Hz.",
      "value-key": "[CUTOFF]",
      "type": "Number",
      "optional": false,
      "id": "cutoff",
      "name": "Cutoff Frequency (Hz)"
    }
  ],
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "url": "https://github.com/freesurfer/freesurfer"
}