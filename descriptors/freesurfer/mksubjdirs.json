{
  "tool-version": "7.4.1",
  "name": "mksubjdirs",
  "author": "FreeSurfer Developers",
  "descriptor-url": "https://example.com/mksubjdirs_descriptor.json",
  "description": "A command-line tool to create subject directories.",
  "command-line": "mksubjdirs [SUBJ_NAME] [MODE] [PARENTS] [VERBOSE] [SELINUX_CONTEXT] [HELP] [VERSION]",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "schema-version": "0.5",
  "inputs": [
    {
      "description": "Name of the subject directory to create.",
      "value-key": "[SUBJ_NAME]",
      "type": "String",
      "optional": false,
      "id": "subj_name",
      "name": "Subject Name"
    },
    {
      "command-line-flag": "-m",
      "description": "Set file mode (as in chmod), not a=rwx - umask",
      "value-key": "[MODE]",
      "type": "String",
      "optional": true,
      "id": "mode",
      "name": "File Mode"
    },
    {
      "command-line-flag": "-p",
      "description": "No error if existing, make parent directories as needed",
      "value-key": "[PARENTS]",
      "type": "Flag",
      "optional": true,
      "id": "parents",
      "name": "Parents Flag"
    },
    {
      "command-line-flag": "-v",
      "description": "Print a message for each created directory",
      "value-key": "[VERBOSE]",
      "type": "Flag",
      "optional": true,
      "id": "verbose",
      "name": "Verbose Flag"
    },
    {
      "command-line-flag": "-Z",
      "description": "Set SELinux security context of each created directory to the default type",
      "value-key": "[SELINUX_CONTEXT]",
      "type": "Flag",
      "optional": true,
      "id": "selinux_context",
      "name": "SELinux Context Flag"
    },
    {
      "command-line-flag": "--help",
      "description": "Display help and exit",
      "value-key": "[HELP]",
      "type": "Flag",
      "optional": true,
      "id": "help",
      "name": "Help Flag"
    },
    {
      "command-line-flag": "--version",
      "description": "Output version information and exit",
      "value-key": "[VERSION]",
      "type": "Flag",
      "optional": true,
      "id": "version",
      "name": "Version Flag"
    }
  ],
  "url": "https://github.com/freesurfer/freesurfer"
}
