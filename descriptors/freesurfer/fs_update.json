{
  "tool-version": "7.4.1",
  "name": "fs_update",
  "author": "FreeSurfer Developers",
  "description": "Utility to update the FreeSurfer installation",
  "command-line": "fs_update [UPDATE_PATH] [HELP_LONG]",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "schema-version": "0.5",
  "inputs": [
    {
      "description": "Path to specific files or directories to update, copied recursively",
      "value-key": "[UPDATE_PATH]",
      "type": "String",
      "optional": true,
      "id": "update_path",
      "name": "Update Path"
    },
    {
      "description": "Show help",
      "command-line-flag": "-h",
      "value-key": "[HELP_SHORT]",
      "type": "Flag",
      "optional": true,
      "id": "help_short",
      "name": "Help Short Flag"
    },
    {
      "command-line-flag": "-help",
      "value-key": "[HELP_MEDIUM]",
      "type": "Flag",
      "optional": true,
      "id": "help_medium",
      "name": "Help Medium Flag"
    },
    {
      "command-line-flag": "--help",
      "value-key": "[HELP_LONG]",
      "type": "Flag",
      "optional": true,
      "id": "help_long",
      "name": "Help Long Flag"
    }
  ],
  "url": "https://github.com/freesurfer/freesurfer"
}
