{
  "tool-version": "7.4.1",
  "name": "mri_maps2csd",
  "author": "FreeSurfer Developers",
  "description": "Tool to create CSD files and PDFs from input maps and apply them.",
  "command-line": "mri_maps2csd --i [INPUT] --csd [CSD_FILE] --pdf [PDF_FILE] --s [SUBJECTNAME_CONDITION] --thresh [THRESHOLD] --sign [SIGN] --csd-apply [CSD_APPLY_FILE] [APPLYOUT] --sd [SUBJECTS_DIR] [DEBUG_FLAG] [CHECK_OPTS_FLAG]",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "--i",
      "description": "Input file(s) or specify them directly on the command line",
      "value-key": "[INPUT]",
      "type": "String",
      "list": true,
      "optional": false,
      "id": "input_files",
      "name": "Input Files"
    },
    {
      "command-line-flag": "--csd",
      "description": "Output CSD file",
      "value-key": "[CSD_FILE]",
      "type": "String",
      "optional": true,
      "id": "csd_file",
      "name": "CSD File"
    },
    {
      "command-line-flag": "--pdf",
      "description": "PDF file created from CSD",
      "value-key": "[PDF_FILE]",
      "type": "String",
      "optional": true,
      "id": "pdf_file",
      "name": "PDF File"
    },
    {
      "command-line-flag": "--s",
      "description": "Subject name, hemisphere, and surface specification",
      "value-key": "[SUBJECTNAME_CONDITION]",
      "type": "String",
      "optional": true,
      "id": "subject_hemi_surf",
      "name": "Subject Hemisphere Surface"
    },
    {
      "command-line-flag": "--thresh",
      "description": "Threshold for cluster-forming (-log10 scale)",
      "value-key": "[THRESHOLD]",
      "type": "Number",
      "optional": true,
      "id": "thresh",
      "name": "Threshold"
    },
    {
      "command-line-flag": "--sign",
      "description": "Sign adjustment for threshold (+1, -1 or 0)",
      "value-key": "[SIGN]",
      "type": "String",
      "optional": true,
      "id": "sign",
      "name": "Sign Adjustment"
    },
    {
      "command-line-flag": "--csd-apply",
      "description": "Apply a CSD file to inputs, return p-value of max cluster",
      "value-key": "[CSD_APPLY_FILE]",
      "type": "String",
      "optional": true,
      "id": "csd_apply_file",
      "name": "CSD Apply File"
    },
    {
      "value-key": "[APPLYOUT]",
      "type": "String",
      "optional": true,
      "id": "apply_out",
      "name": "Apply Output"
    },
    {
      "command-line-flag": "--sd",
      "description": "Subjects directory",
      "value-key": "[SUBJECTS_DIR]",
      "type": "String",
      "optional": true,
      "id": "subjects_dir",
      "name": "Subjects Directory"
    },
    {
      "command-line-flag": "--debug",
      "description": "Turn on debugging",
      "value-key": "[DEBUG_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "debug",
      "name": "Debug Flag"
    },
    {
      "command-line-flag": "--checkopts",
      "description": "Don't run, just check options then exit",
      "value-key": "[CHECK_OPTS_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "checkopts",
      "name": "Check Options Flag"
    }
  ],
  "url": "https://github.com/freesurfer/freesurfer"
}