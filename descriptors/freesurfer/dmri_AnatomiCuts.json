{
  "tool-version": "7.4.1",
  "name": "dmri_AnatomiCuts",
  "author": "FreeSurfer Developers",
  "descriptor-url": "https://example.com/dmri_AnatomiCuts.json",
  "description": "AnatomiCuts tool for DTI fibers segmentation",
  "command-line": "dmri_AnatomiCuts [SEGMENTATION_FILE] [FIBER_FILE] [CLUSTERS] [POINTS] [FIBERS_EIGEN] [OUTPUT_FOLDER] [DIRECTION_FLAG]",
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "-s",
      "description": "Segmentation file",
      "value-key": "[SEGMENTATION_FILE]",
      "type": "File",
      "optional": false,
      "id": "segmentation_file",
      "name": "Segmentation File"
    },
    {
      "command-line-flag": "-f",
      "description": "VTK fiber file",
      "value-key": "[FIBER_FILE]",
      "type": "File",
      "optional": false,
      "id": "fiber_file",
      "name": "Fiber File"
    },
    {
      "command-line-flag": "-c",
      "description": "Number of clusters",
      "value-key": "[CLUSTERS]",
      "type": "Number",
      "optional": false,
      "id": "clusters",
      "name": "Clusters"
    },
    {
      "command-line-flag": "-n",
      "description": "Number of points",
      "value-key": "[POINTS]",
      "type": "Number",
      "optional": false,
      "id": "points",
      "name": "Points"
    },
    {
      "command-line-flag": "-e",
      "description": "Number of fibers for eigen decomposition",
      "value-key": "[FIBERS_EIGEN]",
      "type": "Number",
      "optional": false,
      "id": "fibers_eigen",
      "name": "Fibers Eigen"
    },
    {
      "command-line-flag": "-o",
      "description": "Output folder",
      "value-key": "[OUTPUT_FOLDER]",
      "type": "String",
      "optional": false,
      "id": "output_folder",
      "name": "Output Folder"
    },
    {
      "command-line-flag": "-d",
      "description": "Direction flag: 's' for straight, 'd' for diagonal, 'a' for all, 'o' for none",
      "value-key": "[DIRECTION_FLAG]",
      "type": "String",
      "optional": false,
      "id": "direction_flag",
      "name": "Direction Flag",
      "value-choices": ["s", "d", "a", "o"]
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUT_FOLDER]/output.vtk",
      "description": "Output VTK file of the segmentation",
      "optional": true,
      "id": "output_vtk",
      "name": "Output VTK File"
    }
  ],
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "url": "https://github.com/freesurfer/freesurfer"
}
