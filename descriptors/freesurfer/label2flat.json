{
  "name": "label2flat",
  "description": "A tool used in FreeSurfer to process labeling and patch files.",
  "command-line": "/usr/local/freesurfer/bin/label2flat [SUBJECT_NAME] [LABEL_FILE] [PATCH_FILE] [OUTPUT_FILE]",
  "schema-version": "0.5",
  "inputs": [
    {
      "description": "The name of the subject.",
      "value-key": "[SUBJECT_NAME]",
      "type": "String",
      "optional": false,
      "id": "subject_name",
      "name": "Subject Name"
    },
    {
      "description": "The label file path.",
      "value-key": "[LABEL_FILE]",
      "type": "File",
      "optional": false,
      "id": "label_file",
      "name": "Label File"
    },
    {
      "description": "The patch file path.",
      "value-key": "[PATCH_FILE]",
      "type": "File",
      "optional": false,
      "id": "patch_file",
      "name": "Patch File"
    },
    {
      "description": "The output file path.",
      "value-key": "[OUTPUT_FILE]",
      "type": "String",
      "optional": false,
      "id": "output_file",
      "name": "Output File"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUT_FILE]",
      "description": "The processed output file generated by label2flat.",
      "optional": false,
      "id": "result_file",
      "name": "Result File"
    }
  ],
  "author": "FreeSurfer Developers",
  "tool-version": "7.4.1",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "url": "https://github.com/freesurfer/freesurfer"
}