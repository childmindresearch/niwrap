{
  "tool-version": "7.4.1",
  "name": "mris_reposition_surface",
  "author": "FreeSurfer Developers",
  "description": "Reposition a surface based on the given control points (in JSON format)",
  "command-line": "mris_reposition_surface [SURF] [VOLUME] [POINTS] [OUTPUT] [SIZE] [SIGMA] [ITERATIONS]",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "-s",
      "description": "Input surface",
      "value-key": "[SURF]",
      "type": "File",
      "optional": false,
      "id": "surf",
      "name": "Input surface"
    },
    {
      "command-line-flag": "-v",
      "description": "Input volume",
      "value-key": "[VOLUME]",
      "type": "File",
      "optional": false,
      "id": "volume",
      "name": "Input volume"
    },
    {
      "command-line-flag": "-p",
      "description": "Input points",
      "value-key": "[POINTS]",
      "type": "File",
      "optional": false,
      "id": "points",
      "name": "Input points"
    },
    {
      "command-line-flag": "-o",
      "description": "Output surface filename",
      "value-key": "[OUTPUT]",
      "type": "String",
      "optional": false,
      "id": "output",
      "name": "Output surface"
    },
    {
      "command-line-flag": "-z",
      "description": "Size parameter for repositioning. Default is 1.",
      "value-key": "[SIZE]",
      "type": "Number",
      "default-value": 1,
      "optional": true,
      "id": "size",
      "name": "Size"
    },
    {
      "command-line-flag": "-g",
      "description": "Sigma. Default is 2.0.",
      "value-key": "[SIGMA]",
      "type": "Number",
      "default-value": 2.0,
      "optional": true,
      "id": "sigma",
      "name": "Sigma"
    },
    {
      "command-line-flag": "-i",
      "description": "Number of iterations. Default is 1.",
      "value-key": "[ITERATIONS]",
      "type": "Number",
      "default-value": 1,
      "optional": true,
      "id": "iterations",
      "name": "Iterations"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUT]",
      "description": "Output surface file",
      "optional": false,
      "id": "output_surface",
      "name": "Output surface file"
    }
  ],
  "url": "https://github.com/freesurfer/freesurfer"
}