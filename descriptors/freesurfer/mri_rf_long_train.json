{
  "tool-version": "7.4.1",
  "name": "mri_rf_long_train",
  "author": "FreeSurfer Developers",
  "description": "Trains GCA data with multiple subjects for FreeSurfer",
  "command-line": "mri_rf_long_train [SEG_DIR] [XFORM] [MASK] [NODE_SPACING] [PRIOR_SPACING] [INPUT_DATA] [CHECK] [SUBJECTS] [OUTPUT_RFA]",
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "-seg",
      "description": "Path to the segmentation volume directory, relative to $subject/mri.",
      "value-key": "[SEG_DIR]",
      "type": "String",
      "optional": false,
      "id": "seg_dir",
      "name": "Segmentation Directory"
    },
    {
      "command-line-flag": "-xform",
      "description": "Atlas transform path relative to $subject/mri/transforms.",
      "value-key": "[XFORM]",
      "type": "String",
      "optional": false,
      "id": "xform",
      "name": "Atlas Transform"
    },
    {
      "command-line-flag": "-mask",
      "description": "Volume name to use as a mask, path relative to $subject/mri.",
      "value-key": "[MASK]",
      "type": "String",
      "optional": true,
      "id": "mask",
      "name": "Mask Volume"
    },
    {
      "command-line-flag": "-node_spacing",
      "description": "Spacing of classifiers in canonical space.",
      "value-key": "[NODE_SPACING]",
      "type": "Number",
      "optional": true,
      "id": "node_spacing",
      "name": "Node Spacing"
    },
    {
      "command-line-flag": "-prior_spacing",
      "description": "Spacing of class priors in canonical space.",
      "value-key": "[PRIOR_SPACING]",
      "type": "Number",
      "optional": true,
      "id": "prior_spacing",
      "name": "Prior Spacing"
    },
    {
      "command-line-flag": "-input",
      "description": "Specify training data, path relative to $subject/mri. Can specify multiple inputs. Defaults to 'orig' if not specified.",
      "value-key": "[INPUT_DATA]",
      "type": "String",
      "list": true,
      "optional": true,
      "id": "input_data",
      "name": "Input Data"
    },
    {
      "command-line-flag": "-check",
      "description": "Conduct sanity-check of labels for obvious edit errors.",
      "value-key": "[CHECK]",
      "type": "Flag",
      "optional": true,
      "id": "check",
      "name": "Sanity Check Flag"
    },
    {
      "description": "List of subjects for training.",
      "value-key": "[SUBJECTS]",
      "type": "String",
      "list": true,
      "optional": false,
      "id": "subjects",
      "name": "Subjects"
    },
    {
      "description": "Output RFA filename.",
      "value-key": "[OUTPUT_RFA]",
      "type": "String",
      "optional": false,
      "id": "output_rfa",
      "name": "Output RFA Filename"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUT_RFA].rfa",
      "description": "The output RFA file generated by the tool",
      "optional": false,
      "id": "output_rfa_file",
      "name": "Output RFA File"
    }
  ],
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "url": "https://github.com/freesurfer/freesurfer"
}
