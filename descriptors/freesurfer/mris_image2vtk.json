{
  "tool-version": "7.4.1",
  "name": "mris_image2vtk",
  "description": "Convert image to VTK format with specified thresholds and smoothing parameters",
  "command-line": "mris_image2vtk [INPUT_FILENAME] [OUTPUT_FILENAME] [LOWER_THRESHOLD] [UPPER_THRESHOLD] [VTK_SMOOTHING_ITERS] [IMAGE_SMOOTHING_SIZE] [REDUCTION_PERCENT]",
  "schema-version": "0.5",
  "inputs": [
    {
      "description": "Input image file name",
      "value-key": "[INPUT_FILENAME]",
      "type": "File",
      "optional": false,
      "id": "input_filename",
      "name": "Input File"
    },
    {
      "description": "Output VTK file name",
      "value-key": "[OUTPUT_FILENAME]",
      "type": "String",
      "optional": false,
      "id": "output_filename",
      "name": "Output File"
    },
    {
      "description": "Lower threshold for image conversion",
      "value-key": "[LOWER_THRESHOLD]",
      "type": "Number",
      "optional": false,
      "id": "lower_threshold",
      "name": "Lower Threshold"
    },
    {
      "description": "Upper threshold for image conversion",
      "value-key": "[UPPER_THRESHOLD]",
      "type": "Number",
      "optional": false,
      "id": "upper_threshold",
      "name": "Upper Threshold"
    },
    {
      "description": "Number of VTK smoothing iterations",
      "value-key": "[VTK_SMOOTHING_ITERS]",
      "type": "Number",
      "optional": false,
      "id": "vtk_smoothing_iters",
      "name": "VTK Smoothing Iterations"
    },
    {
      "description": "Image smoothing size",
      "value-key": "[IMAGE_SMOOTHING_SIZE]",
      "type": "Number",
      "optional": false,
      "id": "image_smoothing_size",
      "name": "Image Smoothing Size"
    },
    {
      "description": "Reduction percentage for the conversion",
      "value-key": "[REDUCTION_PERCENT]",
      "type": "Number",
      "optional": false,
      "id": "reduction_percent",
      "name": "Reduction Percentage"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUT_FILENAME]",
      "description": "Output VTK file generated by the conversion process",
      "optional": false,
      "id": "output_vtk_file",
      "name": "Output VTK File"
    }
  ],
  "author": "FreeSurfer Developers",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "url": "https://github.com/freesurfer/freesurfer"
}
