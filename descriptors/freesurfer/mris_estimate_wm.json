{
  "name": "mris_estimate_wm",
  "command-line": "mris_estimate_wm --subjs [SUBJS] [HEMI] [SDIR] [MODEL] [SUFFIX] [GPU] [RSI] [SINGLE_ITER] [VOL]",
  "description": "Tool to estimate white matter surfaces using MRI data.",
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "-s",
      "description": "List of subjects to process.",
      "value-key": "[SUBJS]",
      "type": "String",
      "list": true,
      "optional": false,
      "id": "subjs",
      "name": "Subjects"
    },
    {
      "command-line-flag": "--hemi",
      "description": "Hemisphere to reconstruct (lh or rh).",
      "value-key": "[HEMI]",
      "type": "String",
      "optional": false,
      "id": "hemi",
      "name": "Hemisphere"
    },
    {
      "command-line-flag": "-d",
      "description": "Override SUBJECTS_DIR.",
      "value-key": "[SDIR]",
      "type": "String",
      "optional": true,
      "id": "sdir",
      "name": "Subjects Directory"
    },
    {
      "command-line-flag": "-m",
      "description": "Override default model.",
      "value-key": "[MODEL]",
      "type": "String",
      "optional": true,
      "id": "model",
      "name": "Model"
    },
    {
      "command-line-flag": "-x",
      "description": "Suffix of output surface (default is 'topofit').",
      "value-key": "[SUFFIX]",
      "type": "String",
      "optional": true,
      "id": "suffix",
      "name": "Output Surface Suffix"
    },
    {
      "command-line-flag": "-g",
      "description": "Use the GPU.",
      "value-key": "[GPU]",
      "type": "Flag",
      "optional": true,
      "id": "gpu",
      "name": "GPU flag"
    },
    {
      "command-line-flag": "--rsi",
      "description": "Remove self-intersecting faces during the deformation.",
      "value-key": "[RSI]",
      "type": "Flag",
      "optional": true,
      "id": "rsi",
      "name": "Remove self-intersecting faces"
    },
    {
      "command-line-flag": "--single-iter",
      "description": "Prevent deformation steps from running more than once.",
      "value-key": "[SINGLE_ITER]",
      "type": "Flag",
      "optional": true,
      "id": "single_iter",
      "name": "Single iteration"
    },
    {
      "command-line-flag": "--vol",
      "description": "Subject volume to use as input.",
      "value-key": "[VOL]",
      "type": "String",
      "optional": true,
      "id": "vol",
      "name": "Volume"
    }
  ],
  "author": "FreeSurfer Developers",
  "tool-version": "7.4.1",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "url": "https://github.com/freesurfer/freesurfer"
}
