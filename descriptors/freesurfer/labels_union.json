{
  "tool-version": "7.4.1",
  "name": "labels_union",
  "author": "FreeSurfer Developers",
  "description": "Utility to create the union of two label files.",
  "command-line": "/usr/local/freesurfer/bin/labels_union [LABEL1] [LABEL2] [OUTPUTNAME]",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "schema-version": "0.5",
  "inputs": [
    {
      "description": "First label file (e.g., rh.BA3a.label)",
      "value-key": "[LABEL1]",
      "type": "File",
      "optional": false,
      "id": "label1",
      "name": "Label 1"
    },
    {
      "description": "Second label file (e.g., rh.BA3b.label)",
      "value-key": "[LABEL2]",
      "type": "File",
      "optional": false,
      "id": "label2",
      "name": "Label 2"
    },
    {
      "description": "Output name for the union label file (e.g., rh.BA3ab.union.label)",
      "value-key": "[OUTPUTNAME]",
      "type": "String",
      "optional": false,
      "id": "outputname",
      "name": "Output Name"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUTNAME]",
      "description": "Union of the two label files",
      "optional": false,
      "id": "union_label",
      "name": "Output Union Label"
    }
  ],
  "url": "https://github.com/freesurfer/freesurfer"
}