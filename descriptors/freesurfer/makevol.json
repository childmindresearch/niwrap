{
  "tool-version": "7.4.1",
  "name": "makevol",
  "author": "FreeSurfer Developers",
  "description": "A tool to create a volume with given parameters.",
  "command-line": "makevol [FILENAME] [WIDTH] [HEIGHT] [DEPTH] [SIZEX] [SIZEY] [SIZEZ] [SET_METHOD]",
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "-f",
      "description": "Write volume to the given file name, implying type.",
      "value-key": "[FILENAME]",
      "type": "String",
      "optional": true,
      "id": "filename",
      "name": "Filename",
      "default-value": "new_volume.mgz"
    },
    {
      "command-line-flag": "-x",
      "description": "Use integer WIDTH as the x dimension.",
      "value-key": "[WIDTH]",
      "type": "Number",
      "optional": true,
      "id": "width",
      "name": "Width",
      "default-value": 256,
      "integer": true
    },
    {
      "command-line-flag": "-y",
      "description": "Use integer HEIGHT as the y dimension.",
      "value-key": "[HEIGHT]",
      "type": "Number",
      "optional": true,
      "id": "height",
      "name": "Height",
      "default-value": 256,
      "integer": true
    },
    {
      "command-line-flag": "-z",
      "description": "Use integer DEPTH as the z dimension.",
      "value-key": "[DEPTH]",
      "type": "Number",
      "optional": true,
      "id": "depth",
      "name": "Depth",
      "default-value": 256,
      "integer": true
    },
    {
      "command-line-flag": "--sizex",
      "description": "Use float SIZEX as the x resolution.",
      "value-key": "[SIZEX]",
      "type": "Number",
      "optional": true,
      "id": "sizex",
      "name": "Size X",
      "default-value": 1.0
    },
    {
      "command-line-flag": "--sizey",
      "description": "Use float SIZEY as the y resolution.",
      "value-key": "[SIZEY]",
      "type": "Number",
      "optional": true,
      "id": "sizey",
      "name": "Size Y",
      "default-value": 1.0
    },
    {
      "command-line-flag": "--sizez",
      "description": "Use float SIZEZ as the z resolution.",
      "value-key": "[SIZEZ]",
      "type": "Number",
      "optional": true,
      "id": "sizez",
      "name": "Size Z",
      "default-value": 1.0
    },
    {
      "command-line-flag": "--set-method",
      "description": "Use METHOD to fill the values. Methods: xyz, random, constant.",
      "value-key": "[SET_METHOD]",
      "type": "String",
      "optional": true,
      "id": "set_method",
      "name": "Set Method",
      "default-value": "xyz"
    }
  ],
  "output-files": [
    {
      "path-template": "[FILENAME]",
      "description": "The created volume file.",
      "optional": false,
      "id": "output_file",
      "name": "Output File"
    }
  ],
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "url": "https://github.com/freesurfer/freesurfer"
}