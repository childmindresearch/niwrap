{
  "tool-version": "1.5.0 2e663bdff57597d5d1fb251dc4740d14d9cf11dd",
  "name": "metric-convert",
  "author": "Washington University School of Medicin",
  "command-line": "wb_command -metric-convert [TO_NIFTI] [FROM_NIFTI]",
  "container-image": {
    "image": "fcpindi/c-pac:latest",
    "type": "docker"
  },
  "description": "Convert metric file to fake nifti.\n\nThe purpose of this command is to convert between metric files and nifti1 so that gifti-unaware programs can operate on the data.  You must specify exactly one of the options.",
  "schema-version": "0.5",
  "tags": {},
  "inputs": [
    {
      "id": "to_nifti",
      "name": "to_nifti",
      "description": "convert metric to nifti",
      "command-line-flag": "-to-nifti",
      "type": {
        "id": "to_nifti",
        "name": "to_nifti",
        "description": "convert metric to nifti",
        "command-line": " [METRIC_IN] [NIFTI_OUT]",
        "inputs": [
          {
            "id": "metric_in",
            "name": "metric_in",
            "description": "the metric to convert",
            "optional": false,
            "value-key": "[METRIC_IN]",
            "type": "File"
          },
          {
            "id": "nifti_out",
            "name": "nifti_out",
            "description": "the output nifti file",
            "optional": false,
            "value-key": "[NIFTI_OUT]",
            "type": "File"
          }
        ],
        "output-files": [
          {
            "id": "nifti_out",
            "name": "nifti_out",
            "path-template": "[NIFTI_OUT]",
            "description": "the output nifti file",
            "optional": false
          }
        ]
      },
      "optional": true,
      "value-key": "[TO_NIFTI]",
      "list": false
    },
    {
      "id": "from_nifti",
      "name": "from_nifti",
      "description": "convert nifti to metric",
      "command-line-flag": "-from-nifti",
      "type": {
        "id": "from_nifti",
        "name": "from_nifti",
        "description": "convert nifti to metric",
        "command-line": " [NIFTI_IN] [SURFACE_IN] [METRIC_OUT]",
        "inputs": [
          {
            "id": "nifti_in",
            "name": "nifti_in",
            "description": "the nifti file to convert",
            "optional": false,
            "value-key": "[NIFTI_IN]",
            "type": "File"
          },
          {
            "id": "surface_in",
            "name": "surface_in",
            "description": "surface file to use number of vertices and structure from",
            "optional": false,
            "value-key": "[SURFACE_IN]",
            "type": "File"
          },
          {
            "id": "metric_out",
            "name": "metric_out",
            "description": "the output metric file",
            "optional": false,
            "value-key": "[METRIC_OUT]",
            "type": "File"
          }
        ],
        "output-files": [
          {
            "id": "metric_out",
            "name": "metric_out",
            "path-template": "[METRIC_OUT]",
            "description": "the output metric file",
            "optional": false
          }
        ]
      },
      "optional": true,
      "value-key": "[FROM_NIFTI]",
      "list": false
    }
  ]
}
