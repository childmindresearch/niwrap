{
  "name": "antsJointLabelFusion.sh",
  "command-line": "antsJointLabelFusion.sh [DIMENSIONALITY] [OUTPUT] [ATLAS_IMAGE_MRF] [ATLAS_SEGMENTATION_MRF] [RIGID_TRANSFORM] [SIMILARITY_METRIC] [OTHER_OPTIONS] [VERBOSE] -i [TARGET_IMAGE] -m [MASK_IMAGE] -g [RIGID_TRANSFORM_ADDITIONAL_OPTIONS] -x [SIMILARITY_METRIC_ADDITIONAL_OPTIONS]",
  "author": "ANTs developers",
  "description": "Advanced Normalization Tools (ANTs) is a C++ library available through the command line that computes high-dimensional mappings to capture the statistics of brain structure and function. It allows one to organize, visualize and statistically explore large biomedical image sets. Additionally, it integrates imaging modalities in space + time and works across species or organ systems with minimal customization.\n\nThe ANTs library is considered a state-of-the-art medical image registration and segmentation toolkit which depends on the Insight ToolKit, a widely used medical image processing library to which ANTs developers contribute. ANTs-related tools have also won several international, unbiased competitions such as MICCAI, BRATS, and STACOM.",
  "url": "https://github.com/ANTsX/ANTs",
  "tool-version": "2.5.3",
  "schema-version": "0.5",
  "container-image": {
    "type": "docker",
    "image": "antsx/ants:v2.5.3"
  },
  "inputs": [
    {
      "id": "dimensionality",
      "name": "Dimensionality",
      "value-key": "[DIMENSIONALITY]",
      "type": "Number",
      "integer": true,
      "optional": true,
      "value-choices": [
        2,
        3
      ],
      "command-line-flag": "-d",
      "description": "Image dimensionality (2 or 3)."
    },
    {
      "id": "output",
      "name": "Output",
      "value-key": "[OUTPUT]",
      "type": "String",
      "optional": true,
      "command-line-flag": "-o",
      "description": "Root directory for the output segmentation."
    },
    {
      "id": "atlas_image_mrf",
      "name": "Atlas image for MRF",
      "value-key": "[ATLAS_IMAGE_MRF]",
      "type": "String",
      "optional": true,
      "command-line-flag": "-a",
      "description": "Atlas image(s) to be used for MRF initialization."
    },
    {
      "id": "atlas_segmentation_mrf",
      "name": "Atlas segmentation for MRF",
      "value-key": "[ATLAS_SEGMENTATION_MRF]",
      "type": "String",
      "optional": true,
      "command-line-flag": "-l",
      "description": "Atlas segmentation(s) to be used for MRF initialization."
    },
    {
      "id": "rigid_transform",
      "name": "Rigid transform",
      "value-key": "[RIGID_TRANSFORM]",
      "type": "String",
      "optional": true,
      "command-line-flag": "-g",
      "description": "Rigid transform initialization."
    },
    {
      "id": "similarity_metric",
      "name": "Similarity metric",
      "value-key": "[SIMILARITY_METRIC]",
      "type": "String",
      "optional": true,
      "command-line-flag": "-s",
      "description": "Metric used for calculating similarity."
    },
    {
      "id": "other_options",
      "name": "Other options",
      "value-key": "[OTHER_OPTIONS]",
      "type": "String",
      "optional": true,
      "command-line-flag": "-k",
      "description": "Additional options for label fusion."
    },
    {
      "id": "verbose",
      "name": "Verbose",
      "value-key": "[VERBOSE]",
      "type": "Number",
      "integer": true,
      "optional": true,
      "value-choices": [
        0,
        1
      ],
      "command-line-flag": "-v",
      "description": "Verbose output."
    },
    {
      "id": "target_image",
      "name": "Target image",
      "value-key": "[TARGET_IMAGE]",
      "type": "String",
      "optional": false,
      "command-line-flag": "-i",
      "description": "Image to segment."
    },
    {
      "id": "mask_image",
      "name": "Mask image",
      "value-key": "[MASK_IMAGE]",
      "type": "String",
      "optional": false,
      "command-line-flag": "-m",
      "description": "Mask image."
    },
    {
      "id": "rigid_transform_additional_options",
      "name": "Rigid transform additional options",
      "value-key": "[RIGID_TRANSFORM_ADDITIONAL_OPTIONS]",
      "type": "String",
      "optional": true,
      "command-line-flag": "-g",
      "description": "Additional options for rigid transform."
    },
    {
      "id": "similarity_metric_additional_options",
      "name": "Similarity metric additional options",
      "value-key": "[SIMILARITY_METRIC_ADDITIONAL_OPTIONS]",
      "type": "String",
      "optional": true,
      "command-line-flag": "-x",
      "description": "Additional options for similarity metric."
    }
  ],
  "output-files": [
    {
      "id": "segmentation_output",
      "name": "Segmentation Output",
      "description": "Output segmented image.",
      "path-template": "[OUTPUT].nii.gz"
    }
  ]
}